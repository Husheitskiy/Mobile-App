<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Welcome Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to MalDet"
            style="@style/TextAppearance.Material3.BodyLarge"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="10dp"
            android:textAlignment="center" />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/icon"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What you're gonna do today?"
            style="@style/TextAppearance.Material3.BodyLarge"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="15dp"
            android:textAlignment="center" />

        <!-- First Card - Scan Phone -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_background"
            android:padding="30dp"
            android:elevation="10dp"
            android:layout_marginBottom="40dp"
            android:gravity="center" >

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/phone"
                android:contentDescription="Phone Icon" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan Phone"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btnScanPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#FF5252"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <ImageView
                android:layout_width="32dp"
                android:id="@+id/infofon"
                android:layout_height="32dp"
                android:src="@drawable/info2"
                android:contentDescription="Info Icon"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Second Card - Scan File -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_background"
            android:padding="30dp"
            android:elevation="10dp"
            android:gravity="center">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/filess"
                android:contentDescription="File Icon" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan APK File"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btnScanFile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#FF5252"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/info2"
                android:id="@+id/infofile"
                android:contentDescription="Info Icon"
                android:layout_marginStart="8dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
